/*Konvertiert die Telefonnummer mit dem DataType num in einen String und wandelt duesen in ein Array um */

const numToSeparate = '0172818xxx'; // an dieser Stelle muss die Telefonnummer übergeben werden

console.log(numToSeparate);

let rayOfDigits = Array.from(String(numToSeparate), Number);

console.log(rayOfDigits);   //[1,2,3,4,5]
''
/*überprüft, ob an der ersten und zweiten Stelle der Telefonnumer die Zahl 0 steht z:b. für 0049,
wenn das der Fall ist wird die führende 0 gelöscht und +49 eingefügt */

const firstNumber = rayOfDigits[0];
const secoundNumber = rayOfDigits[1];

if(firstNumber === 0 && secoundNumber !== 0) {

const first = rayOfDigits.shift();
const newLength3 = rayOfDigits.unshift('9');
const newLength2 = rayOfDigits.unshift('4');
const newLength1 = rayOfDigits.unshift('+');
}

console.log(rayOfDigits);

/* fügt das das Array wieder zu einer Nummer zusammen */

 NewNumber = rayOfDigits.join('');

console.log(NewNumber);
